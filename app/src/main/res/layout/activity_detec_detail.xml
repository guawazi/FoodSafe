<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:orientation="vertical"
    tools:context="cn.wangliang.foodsafe.ui.detecdetail.DetecDetailActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/img_detecdetail_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="检测详情"
            android:textColor="@color/color_ffffff"
            android:textSize="15sp"/>


        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/ic_back"/>

        <View
            android:id="@+id/view_bottom"
            android:layout_width="90dp"
            android:layout_height="7dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="26dp"
            android:background="@color/color_ffffff"/>

        <TextView
            android:id="@+id/tv_test_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@id/view_bottom"
            android:layout_marginBottom="21dp"
            android:text="阴性"
            android:textColor="@color/color_ffffff"
            android:textSize="46sp"/>

        <TextView
            android:id="@+id/tv_test_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="14dp"
            android:layout_marginStart="18dp"
            android:layout_toEndOf="@id/tv_test_result"
            android:text="大昌宏晟"
            android:textColor="@color/color_ffffff"
            android:textSize="16sp"/>


        <TextView
            android:id="@+id/tv_sample_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="14dp"
            android:layout_marginStart="14dp"
            android:layout_toEndOf="@id/tv_test_member"
            android:text="牛肉"
            android:textColor="@color/color_ffffff"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_project_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="14dp"
            android:layout_marginStart="14dp"
            android:layout_toEndOf="@id/tv_sample_name"
            android:text="沙丁胺醇"
            android:textColor="@color/color_ffffff"
            android:textSize="16sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <TextView
            android:id="@+id/tv_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="20dp"
            android:singleLine="false"
            android:text="检测详情信息"
            android:textColor="#000101"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:singleLine="false"
            android:text="Detection process information"
            android:textSize="10sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_toStartOf="@id/tv_title1"
            android:background="#b5b5b5"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_toEndOf="@id/tv_title1"
            android:background="#b5b5b5"/>

    </RelativeLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
