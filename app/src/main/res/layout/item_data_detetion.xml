<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:layout_marginEnd="30dp"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_marginStart="30dp"
                                    android:layout_marginTop="20dp"
                                    android:background="@null"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="10dp">

            <TextView
                android:id="@+id/tv_x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                tools:text="未知"/>

            <TextView
                android:id="@+id/tv_xx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                tools:text="未知"/>

            <TextView
                android:id="@+id/tv_test_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                tools:text="2018/1/10 08:10:10"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="5dp">

            <TextView
                android:id="@+id/tv_project_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                tools:text="饿瓦尔塔"/>

            <TextView
                android:id="@+id/tv_sample_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                tools:text="牛肉"/>

            <TextView
                android:id="@+id/tv_sample_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                tools:text="0.5g/0.6g"/>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_test_result"
        android:layout_width="63dp"
        android:layout_height="63dp"
        android:layout_gravity="end"
        tools:background="@drawable/img_test_yang"/>

    <TextView
        android:id="@+id/tv_test_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="6dp"
        android:layout_marginTop="12dp"
        tools:text="阳性"
        android:textColor="@color/color_ffffff"
        android:textSize="13sp"/>

</android.support.v7.widget.CardView>