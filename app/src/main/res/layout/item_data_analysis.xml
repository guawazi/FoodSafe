<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="25dp"
                android:paddingTop="25dp">

    <TextView
        android:id="@+id/tv_stress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:text="新发地"
        android:textColor="#282828"
        android:textSize="13sp"/>

    <ProgressBar
        android:id="@+id/progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="230dp"
        android:layout_height="10dp"
        android:layout_alignTop="@id/tv_stress"
        android:layout_marginStart="6dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@id/tv_stress"
        android:progressDrawable="@drawable/layer_progress"
        android:progress="50"/>

    <TextView
        android:textColor="#418c5b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@id/progress"
        android:text="88.9%"
        android:textSize="11sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_stress"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="检测数：1189     阴性1059     阳性132"
        android:textSize="10sp"/>
</RelativeLayout>