<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null">


    <LinearLayout
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_56dp"
        android:layout_alignParentBottom="true"
        android:background="@null"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_data_detection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@drawable/img_data_detection_checked"
            android:gravity="center"
            android:text="@string/detection_data"
            android:textColor="@color/color_52c14b"/>


        <TextView
            android:id="@+id/tv_data_analysis"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@drawable/img_data_analysis_unchecked"
            android:gravity="center"
            android:text="@string/analysis_data"
            android:textColor="@color/color_282828"/>

        <TextView
            android:id="@+id/tv_mine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@drawable/img_mine_unchecked"
            android:gravity="center"
            android:text="@string/mine"
            android:textColor="@color/color_282828"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tab"
        android:background="@null"/>
</RelativeLayout>
